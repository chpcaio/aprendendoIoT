<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.br.fpalaria.aprendendoiot.Modulos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_verde"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_top"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modulo1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/tituloModulo"
            android:layout_marginTop="@dimen/margin_tittle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/circle_azul"
                    android:layout_marginTop="@dimen/margin_top"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/circle_vermelho"
                    android:layout_marginTop="@dimen/margin_top"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo2"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/tituloModulo"
                    android:layout_marginTop="@dimen/margin_tittle"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/tituloModulo"
                    android:text="@string/modulo3"
                    android:layout_marginTop="@dimen/margin_tittle"/>

            </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_cinza"
            android:layout_marginTop="@dimen/tituloModulo"/>

    </LinearLayout>


</ScrollView>

